<Window x:Class="Kurs4.Spravochniki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справочники системы" 
        Height="575" Width="1020"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="EditFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SpravDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#F0F3F8"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="Padding" Value="15,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Справочники системы" 
                   FontSize="28" 
                   FontWeight="Light" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <TabControl Grid.Row="1" 
                    Background="Transparent" 
                    BorderThickness="0">

            <TabItem Header="Товары" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              x:Name="dgTovary"
                              Style="{StaticResource SpravDataGridStyle}"
                              Height="350"
                              Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="id_товара" Width="0" Visibility="Collapsed" Binding="{Binding id_tovara}"/>
                            <DataGridTextColumn Header="Наименование" Width="200" Binding="{Binding naimenovanie}"/>
                            <DataGridTextColumn Header="Артикул" Width="120" Binding="{Binding artikul}"/>
                            <DataGridTextColumn Header="Штрихкод" Width="120" Binding="{Binding shtrikhkod}"/>
                            <DataGridTextColumn Header="Категория" Width="150" Binding="{Binding CategoryName}"/>
                            <DataGridTextColumn Header="Ед. изм." Width="100" Binding="{Binding UnitName}"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#F39C12"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"
                                                    Tag="{Binding id_tovara}"
                                                    Click="BtnEditTovar_Click"/>
                                            <Button Content="🗑️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#E74C3C"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"
                                                    Tag="{Binding id_tovara}"
                                                    Click="BtnDeleteTovar_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="1" 
                            Background="#F0F3F8" 
                            CornerRadius="5" 
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBox x:Name="txtTovarName" 
                                         Width="200" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Наименование"
                                         Margin="0,0,10,0"/>
                                <TextBox x:Name="txtArtikul" 
                                         Width="120" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Артикул"
                                         Margin="0,0,10,0"/>
                                <TextBox x:Name="txtShtrikhkod" 
                                         Width="120" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Штрихкод"
                                         Margin="0,0,10,0"/>
                                <ComboBox x:Name="cmbTovarCategory" 
                                          Width="150" 
                                          Style="{StaticResource ComboBoxStyle}"
                                          DisplayMemberPath="nazvanie"
                                          SelectedValuePath="id_kategorii"
                                          Margin="0,0,10,0"/>
                                <ComboBox x:Name="cmbTovarUnit" 
                                          Width="100" 
                                          Style="{StaticResource ComboBoxStyle}"
                                          DisplayMemberPath="kratkoe_oboznachenie"
                                          SelectedValuePath="id_edinitsy"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="Добавить" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#27AE60"
                                    Width="100"
                                    Click="BtnAddTovar_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Категории" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              x:Name="dgKategorii"
                              Style="{StaticResource SpravDataGridStyle}"
                              Height="350"
                              Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="id_категории" Width="0" Visibility="Collapsed" Binding="{Binding id_kategorii}"/>
                            <DataGridTextColumn Header="Название" Width="300" Binding="{Binding nazvanie}"/>
                            <DataGridTextColumn Header="Описание" Width="400" Binding="{Binding opisanie}"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#F39C12"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                            <Button Content="🗑️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#E74C3C"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="1" 
                            Background="#F0F3F8" 
                            CornerRadius="5" 
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBox x:Name="txtCategoryName" 
                                         Width="300" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Название категории"
                                         Margin="0,0,10,0"/>
                                <TextBox x:Name="txtCategoryOpisanie" 
                                         Width="300" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Описание"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="Добавить" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#27AE60"
                                    Width="100"
                                    Click="BtnAddCategory_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Единицы измерения" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              x:Name="dgEdinicy"
                              Style="{StaticResource SpravDataGridStyle}"
                              Height="350"
                              Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="id_единицы" Width="0" Visibility="Collapsed" Binding="{Binding id_edinitsy}"/>
                            <DataGridTextColumn Header="Название" Width="250" Binding="{Binding nazvanie}"/>
                            <DataGridTextColumn Header="Краткое обозначение" Width="200" Binding="{Binding kratkoe_oboznachenie}"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#F39C12"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                            <Button Content="🗑️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#E74C3C"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="1" 
                            Background="#F0F3F8" 
                            CornerRadius="5" 
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBox x:Name="txtUnitName" 
                                         Width="250" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Название"
                                         Margin="0,0,10,0"/>
                                <TextBox x:Name="txtUnitShort" 
                                         Width="200" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Обозначение"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="Добавить" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#27AE60"
                                    Width="100"
                                    Click="BtnAddUnit_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Поставщики" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              x:Name="dgPostavshiki"
                              Style="{StaticResource SpravDataGridStyle}"
                              Height="350"
                              Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="id_поставщика" Width="0" Visibility="Collapsed" Binding="{Binding id_postavshika}"/>
                            <DataGridTextColumn Header="Организация" Width="200" Binding="{Binding nazvanie_organizatsii}"/>
                            <DataGridTextColumn Header="ИНН" Width="120" Binding="{Binding inn}"/>
                            <DataGridTextColumn Header="Телефон" Width="150" Binding="{Binding telefon}"/>
                            <DataGridTextColumn Header="Email" Width="180" Binding="{Binding email}"/>
                            <DataGridTextColumn Header="Адрес" Width="200" Binding="{Binding adres}"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#F39C12"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                            <Button Content="🗑️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#E74C3C"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="1" 
                            Background="#F0F3F8" 
                            CornerRadius="5" 
                            Padding="15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                            <StackPanel>
                                <TextBox x:Name="txtPostOrg" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Название организации"/>
                                <TextBox x:Name="txtPostINN" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="ИНН"/>
                                <TextBox x:Name="txtPostPhone" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Телефон"/>
                                <TextBox x:Name="txtPostEmail" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Email"/>
                                <TextBox x:Name="txtPostAdres" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Адрес"/>
                                <Button Content="Добавить поставщика" 
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#27AE60"
                                        Width="150"
                                        HorizontalAlignment="Right"
                                        Click="BtnAddPostavshik_Click"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Блоки" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              x:Name="dgSklady"
                              Style="{StaticResource SpravDataGridStyle}"
                              Height="350"
                              Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="id_склада" Width="0" Visibility="Collapsed" Binding="{Binding id_sklada}"/>
                            <DataGridTextColumn Header="Название" Width="200" Binding="{Binding nazvanie}"/>
                            <DataGridTextColumn Header="Категория Блока" Width="200" Binding="{Binding tip_sklada}"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#F39C12"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                            <Button Content="🗑️" 
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Background="#E74C3C"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="1" 
                            Background="#F0F3F8" 
                            CornerRadius="5" 
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBox x:Name="txtBlockName" 
                                         Width="200" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Название"
                                         Margin="0,0,10,0"/>

                                <TextBox x:Name="txtBlockTip" 
                                         Width="150" 
                                         Style="{StaticResource EditFieldStyle}"
                                         Text="Категория Блока"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="Добавить" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#27AE60"
                                    Width="100"
                                    Click="BtnAddSklad_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>