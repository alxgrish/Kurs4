<Window x:Class="Kurs4.Priemka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление поставки товаров" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="PostupDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Оформление поставки" 
                       FontSize="28" 
                       FontWeight="Light" 
                       Foreground="#2C3E50"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderBrush="#D0D7E2" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                            <TextBlock Text="Номер документа" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource InputFieldStyle}" 
                                     x:Name="txtNomerDokumenta"
                                     Text="ПСТ-2026-001"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,15,15">
                            <TextBlock Text="Дата поставки" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource InputFieldStyle}" 
                                     x:Name="txtDataPostavki"
                                     Text="25.02.2026"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="15,0,0,15">
                            <TextBlock Text="Статус" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbStatus" Style="{StaticResource ComboBoxStyle}" SelectedIndex="0">
                                <ComboBoxItem Content="Черновик"/>
                                <ComboBoxItem Content="Ожидает приёмки"/>
                                <ComboBoxItem Content="Принят"/>
                                <ComboBoxItem Content="Проведён"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                            <TextBlock Text="Поставщик" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbPostavshik" Style="{StaticResource ComboBoxStyle}" 
                                      DisplayMemberPath="nazvanie_organizatsii"
                                      SelectedValuePath="id_postavshika"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,15,15">
                            <TextBlock Text="Блок приёмки" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbSklad" Style="{StaticResource ComboBoxStyle}" 
                                      DisplayMemberPath="nazvanie"
                                      SelectedValuePath="id_sklada"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="15,0,0,15">
                            <TextBlock Text="Общая сумма" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       Margin="0,0,0,5"/>
                            <TextBox Style="{StaticResource InputFieldStyle}" 
                                     x:Name="txtObshayaSumma"
                                     Text="0.00"
                                     IsReadOnly="True"
                                     Background="#F0F3F8"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock Text="Состав поставки" 
                           Style="{StaticResource SectionHeaderStyle}"/>

                <DataGrid x:Name="dgSostavPostavki" 
                          Style="{StaticResource PostupDataGridStyle}"
                          Height="200"
                          Margin="0,0,0,15">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id_позиции" Width="0" Visibility="Collapsed" Binding="{Binding id_pozitsii}"/>
                        <DataGridTextColumn Header="№" Width="50"/>
                        <DataGridTextColumn Header="Товар" Width="200" Binding="{Binding TovarName}"/>
                        <DataGridTextColumn Header="Количество" Width="120" Binding="{Binding kolichestvo}"/>
                        <DataGridTextColumn Header="Цена за единицу" Width="150" Binding="{Binding tsena_za_edinitsu}"/>
                        <DataGridTextColumn Header="Сумма" Width="150" Binding="{Binding summa}"/>
                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" 
                                            Style="{StaticResource ActionButtonStyle}"
                                            Background="#E74C3C"
                                            Width="70"
                                            Height="25"
                                            FontSize="12"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Border Background="#F0F3F8" 
                        CornerRadius="5" 
                        Padding="15"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ComboBox x:Name="cmbTovar" 
                                      Width="250" 
                                      Style="{StaticResource ComboBoxStyle}" 
                                      Margin="0,0,10,0"
                                      DisplayMemberPath="naimenovanie"
                                      SelectedValuePath="id_tovara"/>
                            <TextBox x:Name="txtKolichestvo" 
                                     Width="100" 
                                     Style="{StaticResource InputFieldStyle}" 
                                     Text="1" 
                                     Margin="0,0,10,0"/>
                            <TextBox x:Name="txtTsena" 
                                     Width="120" 
                                     Style="{StaticResource InputFieldStyle}" 
                                     Text="0.00" 
                                     Margin="0,0,10,0"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="Добавить позицию" 
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#27AE60"
                                Width="150"
                                Click="BtnAddTovar_Click"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                BorderBrush="#D0D7E2" 
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Итого: 0.00 ₽" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#27AE60"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Сохранить поставку" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#3498DB"
                            Width="160"
                            Margin="0,0,10,0"
                            Click="BtnSavePostavka_Click"/>
                    <Button Content="Отмена" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#E74C3C"
                            Width="100"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>