<Window x:Class="Kurs4.Towar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товары на складе" 
        Height="650" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="StockDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Товары на складе" 
                       FontSize="28" 
                       FontWeight="Light" 
                       Foreground="#2C3E50"/>
            <TextBlock Text="Просмотр и управление остатками товаров" 
                       FontSize="14" 
                       Foreground="#7F8C8D" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Всего товаров" 
                               FontSize="14" 
                               Foreground="#7F8C8D"/>
                    <TextBlock Text="1 234" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"/>
                    <TextBlock Text="наименований" 
                               FontSize="12" 
                               Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="10,0">
                <StackPanel>
                    <TextBlock Text="Общее количество" 
                               FontSize="14" 
                               Foreground="#7F8C8D"/>
                    <TextBlock Text="45 678" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#27AE60"/>
                    <TextBlock Text="единиц" 
                               FontSize="12" 
                               Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="10,0">
                <StackPanel>
                    <TextBlock Text="Общая стоимость" 
                               FontSize="14" 
                               Foreground="#7F8C8D"/>
                    <TextBlock Text="12 345 678 ₽" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#2980B9"/>
                    <TextBlock Text="по закупочным ценам" 
                               FontSize="12" 
                               Foreground="#95A5A6"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Ниже минимума" 
                               FontSize="14" 
                               Foreground="#7F8C8D"/>
                    <TextBlock Text="12" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#E74C3C"/>
                    <TextBlock Text="требуется заказ" 
                               FontSize="12" 
                               Foreground="#95A5A6"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="10" 
                Padding="20" 
                Margin="0,0,0,20"
                BorderBrush="#D0D7E2" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="#F0F3F8" 
                                CornerRadius="5" 
                                Padding="5"
                                Margin="0,0,10,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="🔍" 
                                           FontSize="16" 
                                           Margin="5,0" 
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource SearchBoxStyle}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Text="Поиск товара..."/>
                            </Grid>
                        </Border>

                        <ComboBox Style="{StaticResource FilterComboBoxStyle}" 
                                  Width="150"
                                  Margin="0,0,10,0"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Все категории"/>
                            <ComboBoxItem Content="Электроника"/>
                            <ComboBoxItem Content="Бытовая техника"/>
                            <ComboBoxItem Content="Мебель"/>
                            <ComboBoxItem Content="Расходные материалы"/>
                        </ComboBox>

                        <ComboBox Style="{StaticResource FilterComboBoxStyle}" 
                                  Width="150"
                                  Margin="0,0,10,0"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Все блоки"/>
                            <ComboBoxItem Content="Основной блок склада"/>
                            <ComboBoxItem Content="Резервный блок склада"/>
                           
                        </ComboBox>

                        <ComboBox Style="{StaticResource FilterComboBoxStyle}" 
                                  Width="150"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Все товары"/>
                            <ComboBoxItem Content="В наличии"/>
                            <ComboBoxItem Content="Мало (менее 10)"/>
                            <ComboBoxItem Content="Нет в наличии"/>
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="Обновить" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#3498DB"
                            Width="100"/>
                </Grid>

                <DataGrid Grid.Row="1" 
                          Style="{StaticResource StockDataGridStyle}"
                          Height="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Артикул" Width="100" Binding="{Binding Sku}"/>
                        <DataGridTextColumn Header="Наименование товара" Width="250" Binding="{Binding ProductName}"/>
                        <DataGridTextColumn Header="Категория" Width="150" Binding="{Binding Category}"/>
                        <DataGridTextColumn Header="Количество" Width="100" Binding="{Binding Quantity}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Ед. изм." Width="80" Binding="{Binding Unit}"/>
                        <DataGridTextColumn Header="Цена закупки" Width="120" Binding="{Binding PurchasePrice}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Цена продажи" Width="120" Binding="{Binding SellingPrice}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Статус" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="3" 
                                            Padding="5,2"
                                            Background="#E8F5E9"
                                            BorderBrush="#A5D6A7"
                                            BorderThickness="1">
                                        <TextBlock Text="В наличии" 
                                                   Foreground="#2E7D32" 
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                BorderBrush="#D0D7E2" 
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Выбрано товаров:" 
                               FontSize="14" 
                               Foreground="#7F8C8D" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="1" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,30,0"/>

                    <TextBlock Text="Общая сумма:" 
                               FontSize="14" 
                               Foreground="#7F8C8D" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="45 990 ₽" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#27AE60"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Добавить товар" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#27AE60"
                            Width="150"
                            Margin="0,0,10,0"/>
                    <Button Content="Редактировать" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#F39C12"
                            Width="150"
                            Margin="0,0,10,0"/>
                    <Button Content="Списать" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#E74C3C"
                            Width="120"
                            Margin="0,0,10,0"/>
                    <Button Content="Экспорт" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#3498DB"
                            Width="100"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>